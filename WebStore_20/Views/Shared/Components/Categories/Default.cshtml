@model IEnumerable<CategoryViewModel>
<h2>Category</h2>
<div class="panel-group category-products" id="accordian">
    <!--category-productsr-->
    @foreach (var category in Model)
    {
        @if (category.ChildCategories.Count > 0)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordian" href="#@category.Name.ToLower()">
                            <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                            @category.Name
                        </a>
                    </h4>
                </div>
                <div id="@category.Name.ToLower()" class="panel-collapse collapse">
                    <div class="panel-body">
                        <ul>
                            @foreach (var childCategory in category.ChildCategories)
                            {
                                <li><a asp-controller="Catalog" asp-action="Shop" asp-route-CategoryId="@childCategory.Id">
                                    @childCategory.Name 
                                    </a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a asp-controller="Catalog" asp-action="Shop" asp-route-CategoryId="@category.Id">
                            @category.Name
                        </a>
                    </h4>
                </div>
            </div>
        }        
    }

</div><!--/category-products-->